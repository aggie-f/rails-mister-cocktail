<div class="container mt-5">
  <h1 class="text-center"> Edit <%= @cocktail.name %></h1>
</div>
<div class="container">
  <div class="row">
    <div class="d-flex">
        <div class="ingredients-edit">
          <ul>
            <% @cocktail.doses.each do |dose| %>
              <li><%= dose.description%><%= dose.ingredient.name %><%= link_to " delete ", dose_path(dose), method: :delete %><i class="far fa-trash-alt"></i></li>
            <% end %>
          </ul>
        </div>
      <div class="form">
        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name, input_html: { class: 'input' }%>
          <label class="btn submit">
            Add a photo
            <span style="display:none;">
              <%= f.input :photo, as: :file %>
            </span>
          </label> <br>
          <%= f.button :submit, input_html: { class: 'submit' } %>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>

<%= link_to 'Back To Cocktail', cocktail_path(@cocktail), class: "btn btn-outline-secondary m-4" %>


