<div class="edit-page">
  <div class="container">
    <div>
      <h1 class="text-center"> Edit - <%= @cocktail.name %></h1>
      <div class="edit-grid">
        <div class="ingredients-edit">
          <% @cocktail.doses.each do |dose| %>
            <p><%= dose.description%><%= dose.ingredient.name %><%= link_to " | delete ", dose_path(dose), method: :delete %><i class="far fa-trash-alt"></i></p>
          <% end %>
        </div>
        <div class="form">
          <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name, input_html: { class: 'input' }%>
            <label class="btn submit">
            Add a photo
            <span style="display:none;">
            <%= f.input :photo, as: :file %>
            </span>
            </label> <br>
          <%= f.button :submit, input_html: { class: 'submit' } %>
          <% end %>
        </div>
      </div>
    </div>
  <%= link_to 'â¬… Back To Cocktail', cocktail_path(@cocktail), class: "btn-back" %>
  </div>
</div>







