<div class="banner">
  <div class="container">
    <h1>Create your own cocktail </h1>
    <%= link_to "Create a new Cocktail", new_cocktail_path, class: "btn-banner" %>
  </div>
</div>



<div class="container">
  <div class="card my-5">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached?%>
        <div class="card-category" style="background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 200, width: 200, crop: :fill %>')"><%= link_to "#{cocktail.name}", "/cocktails/#{cocktail.id}" %>
      <% else %>
        <div class="card-category" style="background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))"><%= link_to "#{cocktail.name}", "/cocktails/#{cocktail.id}" %>
      <% end %>
        </div>
        </div>
    <% end %>
  </div>
</div>

