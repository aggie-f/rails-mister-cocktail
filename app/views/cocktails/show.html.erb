<div class="container">
  <div class="row justify-content-center">
    <h1><%= @cocktail.name %></h1>
  </div>

<div class="card red" style="width: 18rem;">
  <div class="card-header">
    Ingredient
  </div>
  <ul class="list-group list-group-flush">
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item"><%= dose.description%> <%= dose.ingredient.name %> <%= link_to "Remove", dose_path(dose), method: :delete %>
    <% end %></li>
  </ul>
</div>

<%= link_to "Create a new dose", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Homepage", cocktails_path, class: "btn btn-primary" %>

